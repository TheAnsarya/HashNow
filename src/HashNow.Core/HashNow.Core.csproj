<Project Sdk="Microsoft.NET.Sdk">

<PropertyGroup>
<TargetFramework>net10.0</TargetFramework>
<LangVersion>latest</LangVersion>
<ImplicitUsings>enable</ImplicitUsings>
<Nullable>enable</Nullable>
<TreatWarningsAsErrors>true</TreatWarningsAsErrors>

<AssemblyName>HashNow.Core</AssemblyName>
<RootNamespace>HashNow.Core</RootNamespace>
<Version>1.1.0</Version>
<Description>Core library for computing 58 hash algorithms in parallel using StreamHash</Description>
<Authors>TheAnsarya</Authors>
<Company>TheAnsarya</Company>
<Product>HashNow</Product>
<Copyright>Copyright (c) 2025 TheAnsarya</Copyright>

<GenerateDocumentationFile>true</GenerateDocumentationFile>
<NoWarn>CS1591</NoWarn>
</PropertyGroup>

<ItemGroup>
  <!-- StreamHash for fast non-crypto hashes (xxHash, Murmur, City, Spooky, SipHash, etc.) -->
  <PackageReference Include="StreamHash" Version="1.3.0" />
  <!-- BouncyCastle for cryptographic hashes (MD2/4, SHA-3, Keccak, Skein, etc.) -->
  <PackageReference Include="BouncyCastle.Cryptography" Version="2.6.2" />
  <!-- BLAKE family hashes -->
  <PackageReference Include="Blake3" Version="2.2.0" />
  <PackageReference Include="SauceControl.Blake2Fast" Version="2.0.0" />
  <!-- Built-in hashing for SHA-256, MD5, etc. -->
  <PackageReference Include="System.IO.Hashing" Version="10.0.2" />
</ItemGroup>

</Project>
